<tr class="orgaoControles">
	<td></td>
	<td>
		<button class="botao vermelho acorde" onclick="avancarCifra('retroceder', this)" id="cifraRetroceder" style="display:none">
			<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-skip-backward-fill" viewBox="0 0 16 16">
				<path d="M.5 3.5A.5.5 0 0 0 0 4v8a.5.5 0 0 0 1 0V8.753l6.267 3.636c.54.313 1.233-.066 1.233-.697v-2.94l6.267 3.636c.54.314 1.233-.065 1.233-.696V4.308c0-.63-.693-1.01-1.233-.696L8.5 7.248v-2.94c0-.63-.692-1.01-1.233-.696L1 7.248V4a.5.5 0 0 0-.5-.5" />
			</svg>
		</button>
	</td>
	<td>
		<button id="gravar" data-playing="false" class="botao parar" onclick="mostrarModal('gravar')">
			<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
				<path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
			</svg>
		</button>
		<button id="play-pause" data-playing="false" class="botao parar" onclick="escolherAcorde('', this)" style="display:none">
			<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-stop-fill" viewBox="0 0 16 16">
				<path d="M5 3.5h6A1.5 1.5 0 0 1 12.5 5v6a1.5 1.5 0 0 1-1.5 1.5H5A1.5 1.5 0 0 1 3.5 11V5A1.5 1.5 0 0 1 5 3.5z" />
			</svg>
		</button>
	</td>
	<td>
		<button class="botao azul acorde" onclick="avancarCifra('avancar', this)" id="cifraAvancar" style="display:none">
			<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-play-fill" viewBox="0 0 16 16">
				<path d="m11.596 8.697-6.363 3.692c-.54.313-1.233-.066-1.233-.697V4.308c0-.63.692-1.01 1.233-.696l6.363 3.692a.802.802 0 0 1 0 1.393z" />
			</svg>
		</button>
	</td>

	<td rowspan="5">
		<div style="display: flex; align-items: center" id="volumeDiv">
			<input type="range" orient="vertical" min="0" max="1" value="0.9" step="0.1" oninput="alterarVolume(this.value, 0.9)">
			<div class="textoVertical">Volume <span id="volumeTexto">9</span></div>
		</div>
	</td>
</tr>